WindowManager:
    OpeningWindow:
    MainWindow:
    ResultWindow:

<TextInput>
    multiline: False
    padding_x: [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0, 0] if self.text else [self.center[0], 0]
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

<OpeningWindow>
    name: "opening"

    GridLayout:

        cols: 1

        Label:
            text: "DEUTSCHE VERBEN"

        Button:
            text: "Starten"
            on_release: app.root.current = "main"

<MainWindow>
    name: "main"
    answer1: answer1
    answer2: answer2
    answer3: answer3
    current_verb: current_verb
    next_button: next_button

    BoxLayout:
        orientation: 'vertical'
        spacing: 0

        Button:
            id: current_verb

        Label:
            text: "Präsens (er)"

        TextInput:
            id: answer1
            on_text_validate: answer2.focus = True

        Label:
            text: "Präteritum (ich)"

        TextInput:
            id: answer2
            on_text_validate: answer3.focus = True

        Label:
            text: "Perfekt (er)"

        TextInput:
            id: answer3

        Button:
            id: next_button
            text: "check"
            on_release: root.add_answers()

        Button:
            text: "stop"
            on_release: root.stop()



<ResultWindow>
    name: "result"
    final_score: final_score

    Label:
        id: final_score
