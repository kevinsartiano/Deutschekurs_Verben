WindowManager:
    OpeningWindow:
    MainWindow:
    ResultWindow:

<TextInput>
    multiline: False
    padding_x: [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0, 0] if self.text else [self.center[0], 0]
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

<OpeningWindow>
    name: "opening"

    GridLayout:

        cols: 1

        Label:
            text: "DEUTSCHE VERBEN"

        Button:
            text: "Starten"
            on_release: app.root.current = "main"

<MainWindow>
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        spacing: 0

        Button:
            text: root.current_verb


        Label:
            text: "Präsens (er)"

        TextInput:
            id: answer1

        Label:
            text: "Präteritum (ich)"

        TextInput:
            id: answer2

        Label:
            text: "Perfekt (er)"

        TextInput:
            id: answer3

        Button:
            text: "check"
#            on_release: main.add_answers

        Button:
            text: "stop"


<ResultWindow>
    name: "result"